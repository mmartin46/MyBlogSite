@{
    var targetId = ViewData["target"] as string;
    var changeOfY = ViewData["movement"] as string;
    var child = ViewData["child"] as string;
}


@model string;

<script>
    var excludedTitle = @Json.Serialize(Model);
    var targetId = @Json.Serialize(targetId);
    var movement = @Json.Serialize(changeOfY);
    var child = @Json.Serialize(child);

    $(document).ready(function () {

        $("#" + targetId + " " + child + " *:not(" + excludedTitle + ")").css("opacity", 0);
        $("#" + targetId + " " + child + " *:not(" + excludedTitle + ")").css("position", "relative");

        $("#" + targetId + " " + child + " *:not(" + excludedTitle + ")").animate({
            top: ('+=' + movement)
        }, 0);
        $("#" + targetId + " " + child + " *:not(" + excludedTitle + ")").animate({
            opacity: 1,
            top: ('-=' + movement)
        }, 1000);
    });
</script>